<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"

    android:id="@+id/layout"

    tools:context=".LactatingMother_add">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:contentDescription="Description for accessibility"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="341dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Lactating Mothers List"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320px"
        android:layout_marginLeft="320px"
        android:layout_marginTop="40px"
        android:layout_marginBottom="40px"
        android:background="#BA2424"
        android:text="Add Beneficiary"
        android:textColor="#F1E5E5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />







<!--        </androidx.constraintlayout.widget.ConstraintLayout>-->



</LinearLayout>